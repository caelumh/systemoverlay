<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnOpenMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/darkergrey2"
        android:text="Open MainActivity"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCloseWindow" />

    <Button
        android:id="@+id/btnCloseWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/darkergrey2"
        android:text="Close"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnOpenMainActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOLLOW ANDROID_DEVS"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenMainActivity" />


</androidx.constraintlayout.widget.ConstraintLayout>